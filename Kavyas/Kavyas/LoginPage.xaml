<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kavyas.LoginPage"
             BackgroundColor="Green"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Login Page" TextColor="White" FontSize="Large" Margin="0,0,0,30"></Label>
            <Entry x:Name="entEmail" Placeholder="Enter Email" TextColor="White" Keyboard="Email"  PlaceholderColor="White"/>
            <Entry x:Name="entPassword" Placeholder="Enter Password" IsPassword="True" TextColor="White" PlaceholderColor="White"/>
            <Button Text="Login" TextColor="Black" BackgroundColor="White" Margin="20" Clicked="LoginValidation"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="SignIn" TextColor="Black" BackgroundColor="White" Padding="5"/>
                <Label HorizontalOptions="EndAndExpand" Padding="5" Text="Forgot Password" TextColor="Black" BackgroundColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 